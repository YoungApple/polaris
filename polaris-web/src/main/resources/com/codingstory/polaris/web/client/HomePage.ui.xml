<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .logo {
        }
        .searchPanel {
            min-width: 500px;
            max-width: 700px;
            margin: 0px auto;
            text-align: center;
        }
        .searchBox {
            width: 300px;
            height: 18px;
            margin: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.logo}">
            <h1>Polaris Code Search</h1>
        </div>
        <g:FormPanel styleName="{style.searchPanel}">
            <g:FlowPanel>
                <g:TextBox ui:field="searchBox" styleName="{style.searchBox}"/>
                <g:SubmitButton ui:field="searchButton">Search</g:SubmitButton>
            </g:FlowPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder>
