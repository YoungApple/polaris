<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:p='urn:import:com.codingstory.polaris.web.client'>
    <ui:style>
        .searchResultItem {
            margin-top: 5px;
            margin-bottom: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.searchResultItem}">
            <g:Hyperlink ui:field="fileNameAnchor" />
            <g:Label ui:field="kindLabel" />
            <g:DisclosurePanel>
                <g:customHeader>
                    <g:Label ui:field="rankingScoreLabel" />
                </g:customHeader>
                <g:HTMLPanel>
                    <div ui:field="rankingExplanationDivElement" />
                </g:HTMLPanel>
            </g:DisclosurePanel>
            <p:CodeSnippetWidget ui:field="summaryCodeSnippet" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
