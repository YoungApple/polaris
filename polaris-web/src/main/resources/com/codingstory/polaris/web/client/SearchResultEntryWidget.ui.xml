<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:p='urn:import:com.codingstory.polaris.web.client'>
    <ui:style>
        .searchResultItem {
            margin-top: 5px;
            margin-bottom: 5px;
        }
        .searchResultItemAnchor {
            cursor: pointer;
            text-decoration: underline;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.searchResultItem}">
            <g:SimplePanel>
                <g:Anchor ui:field="fileNameAnchor" styleName="{style.searchResultItemAnchor}"/>
            </g:SimplePanel>
            <p:CodeSnippetWidget ui:field="summaryCodeSnippet" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
