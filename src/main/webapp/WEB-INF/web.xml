<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <!-- Servlets -->
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.codingstory.polaris.searchui.server.CodeSearchServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>greet</servlet-name>
        <servlet-class>com.codingstory.polaris.searchui.server.GreetingServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/searchui/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>greet</servlet-name>
        <url-pattern>/searchui/greet</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>source.html</welcome-file>
    </welcome-file-list>
</web-app>
